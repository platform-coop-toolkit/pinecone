<style>
	:root {
		--sizer: 1.25rem;
	}

	.icons {
		align-items: center;
		display: flex;
		flex-wrap: wrap;
		justify-content: space-between;
		padding: 0.75rem;
	}

	.icon {
		height: var(--sizer);
		margin: 0.75rem;
		width: var(--sizer);
	}

	.icons.has-blue-500-color .icon path {
		{# fill: #16605d; #}
	}

	.icons.has-dark-mint-500-background-color .icon path {
		{# fill: #fff; #}
	}
</style>
<h1>{{ iconsTitle }}</h1>
<div class="icons">
	{% for icon in icons %}
		{% render '@icon', {icon: icon} %}
	{% endfor %}
</div>
<div class="icons has-blue-500-color">
	{% for icon in icons %}
			{% render '@icon', {icon: icon} %}
	{% endfor %}
</div>

<div class="icons has-dark-mint-500-background-color">
	{% for icon in icons %}
		{% render '@icon', {icon: icon} %}
	{% endfor %}
</div>
