<div class="page-header">
	{% render '@breadcrumb-link', {label: 'Home', href: '/home'} %}
	<h1>{{ title }}</h1>
</div>
<div class="filter-sort">
	{% render '@button', {standAlone: true, id: 'show-filters'}, true %}
		<div class="filter-sort__filters">
			{% render '@button', {standAlone: true, id: 'hide-filters', label: 'Close', iconPosition: 'end', icon: 'close'}, true %}
			<form action="/">
			<h2 class="h1 screen-reader-text" tabindex="-1">Filters</h2>
			<div class="accordion">
			{% for filterList in filterLists %}
				{% render '@filter-list', {standAlone: true, label: filterList.label, terms: filterList.terms}, true %}
			{% endfor %}
			</div>
			{% render '@submit', {standAlone: true, value: 'Apply filters', id: 'apply-filters'} %}
			</form>
		</div>
		<div class="filter-sort__sorts">
			{% render '@select', {name: 'orderby', label: 'Sort by', description: false, options: {recency: 'Most recently added'}, standAlone: true} %}
		</div>
</div>
<div class="resource-list">
<ul class="cards">
{% for card in cards %}
  {% render '@card--resource', card %}
{% endfor %}
</ul>
</div>
{% render '@pagination', {title: false}, true %}
